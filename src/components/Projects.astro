---
// Projects.astro
import Angeljpeg from "./ui/Angeljpeg.astro";
import ProjectCard from "./ui/ProjectCard.astro";

const projects = [
  {
    nombre: "Portfolio",
    desc: "Sitio personal hecho con Astro y Tailwind",
    tech: ["Astro", "Tailwind"],
    source: "https://github.com/angeljpeg/portfolio",
    preview: "https://github.com/angeljpeg/portfolio",
  },
];
---

<section
  id="projects"
  class="min-h-screen px-4 py-16 sm:px-8 md:px-16 font-roboto-mono text-white"
>
  <header
    class="w-full border-b-4 border-purple-400 text-2xl sm:text-3xl md:text-4xl pb-4 mb-12"
  >
    <Angeljpeg method="projects" />
  </header>

  <main class="grid gap-8 grid-cols-1 sm:grid-cols-2 lg:grid-cols-3">
    {
      projects.map((p) => (
        <ProjectCard
          nombre={p.nombre}
          desc={p.desc}
          tech={p.tech}
          source={p.source}
          preview={p.preview}
        />
      ))
    }
  </main>
</section>
