---
// About.astro
import { Icon } from "astro-icon/components";
import Angeljpeg from "../components/ui/Angeljpeg.astro";
---

<section
  id="about"
  class="px-4 sm:px-8 lg:px-24 text-white font-roboto-mono py-20 relative overflow-hidden"
>
  <!-- Background subtle grid pattern -->
  <div class="absolute inset-0 bg-grid-pattern opacity-5 z-0"></div>

  <main class="relative z-10 mx-auto max-w-7xl">
    <div class="flex flex-col xl:flex-row gap-12">
      <!-- Left column -->
      <div
        class="w-full xl:w-1/2 flex flex-col items-center xl:items-start text-center xl:text-left space-y-4"
      >
        <div class="relative">
          <div
            class="absolute inset-0 bg-purple-800/20 rounded-full blur-md scale-110"
          >
          </div>

          <img
            src="/me.jpeg"
            alt="Angel - Desarrollador Backend"
            class="rounded-full w-36 h-36 sm:w-48 sm:h-48 object-cover shadow-lg border-2 border-purple-400/70 relative z-10"
          />

          <div
            class="absolute -bottom-2 -right-2 w-5 h-5 sm:w-6 sm:h-6 bg-purple-500 rounded-full border-2 border-zinc-900 z-20"
          >
          </div>
        </div>

        <h3 class="text-2xl sm:text-3xl font-bold">
          <span class="z-10"><Angeljpeg method="about" /></span>
        </h3>

        <div class="flex gap-4 justify-center xl:justify-start">
          <a
            href="https://github.com/angeljpeg"
            target="_blank"
            class="text-zinc-400 hover:text-purple-400 transition-colors"
          >
            <Icon name="mdi:github" class="text-2xl" />
          </a>
          <a
            href="https://linkedin.com/in/angeljpeg"
            target="_blank"
            class="text-zinc-400 hover:text-purple-400 transition-colors"
          >
            <Icon name="mdi:linkedin" class="text-2xl" />
          </a>
          <a
            href="https://open.spotify.com/user/..."
            target="_blank"
            class="text-zinc-400 hover:text-purple-400 transition-colors"
          >
            <Icon name="mdi:spotify" class="text-2xl" />
          </a>
        </div>

        <div class="w-full max-w-xs mt-4">
          <div
            class="flex items-center justify-between bg-zinc-800 border border-purple-400 rounded-full px-3 py-2 text-sm shadow-md transition hover:shadow-lg"
          >
            <p class="truncate text-zinc-200">inbox@angeljpeg.me</p>
            <button
              onclick="navigator.clipboard.writeText('inbox@angeljpeg.me')"
              class="ml-2 bg-zinc-700 hover:bg-purple-500 text-white rounded-full p-2"
              aria-label="Copiar correo al portapapeles"
            >
              <Icon name="mdi:clipboard-outline" class="text-xl" />
            </button>
          </div>
        </div>
      </div>

      <!-- Right column -->
      <div
        class="w-full xl:w-1/2 flex flex-col items-center xl:items-start text-center xl:text-left space-y-6"
      >
        <div>
          <div
            class="inline-block px-3 py-1 bg-purple-900/30 border border-purple-700/30 rounded-md text-purple-300 text-sm mb-3"
          >
            <span class="font-mono">{"< about_me >"}</span>
          </div>

          <h2 class="text-2xl sm:text-3xl font-bold mb-3">
            Desarrollador Backend
          </h2>

          <p class="text-base sm:text-lg text-zinc-300 leading-relaxed">
            Soy un <span class="text-purple-400 font-semibold"
              >desarrollador backend</span
            > apasionado por las nuevas tecnologías y siempre en busca de aprender
            más y crear soluciones eficientes. Me especializo en construir APIs robustas
            y escalables con tecnologías modernas.
          </p>
        </div>

        <div class="pt-4">
          <p class="text-sm uppercase tracking-wider text-zinc-500 mb-3">
            Actual Stack
          </p>
          <div class="flex flex-wrap justify-center xl:justify-start gap-2">
            <span
              class="px-3 py-1 bg-zinc-800/50 rounded-md text-sm border border-zinc-700/50 hover:border-purple-500/50 transition-colors"
            >
              Express
            </span>
            <span
              class="px-3 py-1 bg-zinc-800/50 rounded-md text-sm border border-zinc-700/50 hover:border-purple-500/50 transition-colors"
            >
              TypeScript
            </span>
            <span
              class="px-3 py-1 bg-zinc-800/50 rounded-md text-sm border border-zinc-700/50 hover:border-purple-500/50 transition-colors"
            >
              PostgresSQL
            </span>
          </div>
        </div>
      </div>
    </div>
  </main>
</section>

<style>
  /* Sutble grid pattern */
  .bg-grid-pattern {
    background-image: linear-gradient(
        to right,
        rgb(152, 48, 221) 1px,
        transparent 1px
      ),
      linear-gradient(to bottom, rgb(55, 38, 82) 1px, transparent 1px);
    background-size: 20px 20px;
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .lg:w-1/3 {
      width: 100%;
    }
    .lg:w-2/3 {
      width: 100%;
    }
    .lg:flex-row {
      flex-direction: column;
    }
    .lg:gap-12 {
      gap: 8px;
    }
    .text-3xl {
      font-size: 2.25rem;
    }
    .text-4xl {
      font-size: 2.5rem;
    }
    .text-2xl {
      font-size: 1.5rem;
    }
    .sm:text-3xl {
      font-size: 2rem;
    }
    .sm:text-lg {
      font-size: 1.125rem;
    }
  }
</style>
