---
/* Skills.astro */
import { Icon } from "astro-icon/components";

const skills = [
  {
    name: "Backend",
    skills: ["Express", "Nest.js", "Typescript", "MySQL"],
    icon: "server",
  },
  {
    name: "Frontend",
    skills: ["Astro", "React", "TailwindCSS"],
    icon: "monitor-dashboard",
  },
  {
    name: "Herramientas",
    skills: ["Git", "Linux"],
    icon: "tools",
  },
  {
    name: "Aprendiendo",
    skills: ["Docker", "Go"],
    icon: "book-open-variant",
  },
];
---

<section
  id="skills"
  class="px-4 py-16 sm:px-8 md:px-16 text-white font-roboto-mono relative"
>
  <div class="max-w-4xl mx-auto relative z-10">
    <h3 class="text-3xl sm:text-4xl font-semibold mb-12">Mis Skills</h3>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
      <!-- Backend Skills -->
      {
        skills.map((s) => (
          <div class="skill-category-card p-4 rounded-xl h-full">
            <div class="flex items-start gap-2 mb-4">
              <Icon
                name={`mdi:${s.icon}`}
                class="text-purple-500 min-w-[20px] w-5 h-5 mt-1"
              />
              <h4 class="text-xl font-medium leading-snug break-words">
                {s.name}
              </h4>
            </div>

            <ul class="skill-list">
              {s.skills.map((i) => (
                <li class="skill-item">
                  <span class="skill-bullet" />
                  {i}
                </li>
              ))}
            </ul>
          </div>
        ))
      }
    </div>
  </div>
</section>

<style>
  .skill-category-card {
    background-color: rgba(30, 30, 30, 0.5);
    border: 1px solid rgba(75, 75, 75, 0.2);
    border-radius: 0.375rem;
    padding: 1.25rem;
    transition:
      transform 0.2s ease,
      border-color 0.2s ease;
  }

  .skill-category-card:hover {
    transform: translateY(-3px);
    border-color: rgba(168, 85, 247, 0.3);
  }

  .skill-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 2rem;
    height: 2rem;
    margin-right: 0.75rem;
    background-color: rgba(168, 85, 247, 0.1);
    border-radius: 0.25rem;
  }

  .skill-list {
    list-style: none;
    margin-top: 0.5rem;
  }

  .skill-item {
    position: relative;
    padding: 0.5rem 0;
    padding-left: 1rem;
    display: flex;
    align-items: center;
    color: rgba(255, 255, 255, 0.8);
    transition:
      transform 0.15s ease,
      color 0.15s ease;
  }

  .skill-item:not(:last-child) {
    border-bottom: 1px solid rgba(75, 75, 75, 0.15);
  }

  .skill-item:hover {
    transform: translateX(3px);
    color: rgba(168, 85, 247, 0.9);
  }

  .skill-bullet {
    position: absolute;
    left: 0;
    width: 4px;
    height: 4px;
    border-radius: 50%;
    background-color: rgba(168, 85, 247, 0.7);
    margin-right: 0.5rem;
  }

  /* Reduce motion preference */
  @media (prefers-reduced-motion: reduce) {
    .skill-category-card {
      transition: none;
    }

    .skill-item {
      transition: none;
    }
  }

  /* Responsive adjustments */
  @media (max-width: 640px) {
    .grid {
      gap: 1rem;
    }

    .skill-category-card {
      padding: 1rem;
    }
  }
</style>
