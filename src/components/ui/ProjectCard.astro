---
type ProyectoProps = {
  nombre: string;
  desc: string;
  tech: string[];
  source: string;
  preview: string;
};

const { desc, nombre, preview, source, tech } = Astro.props as ProyectoProps;
---

<div class="project-card">
  <h2 class="card-title">{nombre}</h2>

  <p class="card-desc">{desc}</p>

  <div class="tech-container">
    {tech.map((t) => <span class="tech-tag">{t}</span>)}
  </div>

  <div class="links-container">
    <a href={preview} target="_blank" class="card-link preview-link">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="16"
        height="16"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
        class="link-icon"
      >
        <path d="M2 12s3-7 10-7 10 7 10 7-3 7-10 7-10-7-10-7Z"></path>
        <circle cx="12" cy="12" r="3"></circle>
      </svg>
      <span>Preview</span>
    </a>

    <a href={source} target="_blank" class="card-link code-link">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="16"
        height="16"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
        class="link-icon"
      >
        <polyline points="16 18 22 12 16 6"></polyline>
        <polyline points="8 6 2 12 8 18"></polyline>
      </svg>
      <span>CÃ³digo</span>
    </a>
  </div>
</div>

<style>
  .project-card {
    background-color: #18181b; /* zinc-900 */
    border-radius: 0.75rem;
    padding: 1.25rem;
    color: #f4f4f5; /* zinc-100 */
    box-shadow:
      0 10px 15px -3px rgba(0, 0, 0, 0.1),
      0 4px 6px -2px rgba(0, 0, 0, 0.05);
    border: 1px solid #27272a; /* zinc-800 */
    display: flex;
    flex-direction: column;
    height: 100%;
    transition:
      transform 0.3s ease,
      box-shadow 0.3s ease;
  }

  .project-card:hover {
    transform: translateY(-4px);
    box-shadow:
      0 20px 25px -5px rgba(0, 0, 0, 0.1),
      0 10px 10px -5px rgba(0, 0, 0, 0.04);
  }

  .card-title {
    font-size: 1.25rem;
    font-weight: 700;
    font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas,
      monospace;
    margin-bottom: 0.75rem;
    padding-bottom: 0.5rem;
    border-bottom: 1px solid #3f3f46; /* zinc-700 */
    color: white;
  }

  .card-desc {
    font-size: 0.875rem;
    color: #d4d4d8; /* zinc-300 */
    margin-bottom: 1rem;
    font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas,
      monospace;
    flex-grow: 1;
  }

  .tech-container {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 1rem;
  }

  .tech-tag {
    font-size: 0.75rem;
    background-color: #27272a; /* zinc-800 */
    color: #d8b4fe; /* purple-300 */
    padding: 0.25rem 0.5rem;
    border-radius: 0.25rem;
    border: 1px solid #3f3f46; /* zinc-700 */
    font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas,
      monospace;
  }

  .links-container {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    padding-top: 0.75rem;
    border-top: 1px solid #27272a; /* zinc-800 */
  }

  .card-link {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.25rem;
    padding: 0.5rem 0.75rem;
    background-color: #27272a; /* zinc-800 */
    color: #d8b4fe; /* purple-300 */
    border-radius: 0.375rem;
    text-decoration: none;
    transition:
      background-color 0.2s ease,
      color 0.2s ease;
    font-size: 0.75rem;
    font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas,
      monospace;
  }

  .card-link:hover {
    background-color: #581c87; /* purple-900 */
    color: white;
  }

  .link-icon {
    width: 0.875rem;
    height: 0.875rem;
  }

  /* Responsive styles */
  @media (min-width: 640px) {
    .links-container {
      flex-direction: row;
    }

    .card-link {
      flex: 1;
    }
  }
</style>
